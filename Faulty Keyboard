class Solution {
public:
    string finalString(string s) {
        string arr="";
        int n=s.length();
        
        for(int i=0;i<n;i++){
            
            if(s[i]=='i'){
                reverse(arr.begin(),arr.end());
            }
            else{
                arr=arr+s[i];
            }
        }
        return arr;
    }
};
